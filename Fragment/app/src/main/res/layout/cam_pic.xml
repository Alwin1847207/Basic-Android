<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/midnightblue"></LinearLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="679dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="316dp"
            android:layout_height="342dp"

            android:src="@drawable/add" />

        <Button
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="85dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonstyle"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:ems="10"
            android:text="Capture"
            tools:visibility="visible" />

        <Button
            android:id="@+id/pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonstyle"

            android:drawableLeft="@drawable/ic_menu_gallery"
            android:ems="10"
            android:text="Pick"
            tools:visibility="visible" />


        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonstyle"

            android:drawableLeft="@drawable/upload"
            android:ems="10"
            android:text="START UPLOAD"
            tools:visibility="visible" />
    </LinearLayout>
</RelativeLayout>