<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/midnightblue"></LinearLayout>


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="316dp"
            android:layout_height="400dp"

            android:src="@drawable/add" />

        <Button
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="95dp"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:ems="10"
            android:text="Capture"
            tools:visibility="visible"
            android:background="@drawable/buttonstyle"/>
        <Button
            android:id="@+id/pick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="95dp"
            android:drawableLeft="@drawable/ic_menu_gallery"

            android:ems="10"
            android:text="Pick"
            tools:visibility="visible"
            android:background="@drawable/buttonstyle"/>



        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="95dp"
            android:drawableLeft="@drawable/upload"

            android:ems="10"
            android:text="START UPLOAD"
            tools:visibility="visible"
            android:background="@drawable/buttonstyle"/>
    </LinearLayout>
</RelativeLayout>